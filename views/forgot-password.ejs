<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Forgot Password - Chavalingo</title>

  <!-- Keep Quicksand font and your external CSS -->
  <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/resetpass.css">

</head>
<body>
  <% var showOTP = (typeof showOTP === 'undefined') ? false : showOTP; %>
  <% var email = (typeof email === 'undefined') ? '' : email; %>

  <header>
    <a href="/login">
      <img src="/img/logoRevise.png" alt="Chavalingo Logo" class="logo">
    </a>
  </header>

  <div class="form-container">
    <h2>OTP Verification</h2>

    <form id="forgotForm" action="/forgot-password" method="POST" novalidate>
      <p>Enter your registered email address</p>
      <input
        type="email"
        id="email"
        name="email"
        value="<%= typeof email === 'string' ? email : '' %>"
        placeholder="Email address"
        autocomplete="email"
        required
        <%= showOTP ? 'readonly' : '' %>
      />

      <!-- OTP Section -->
      <div id="otp-section" style="<%= showOTP ? 'display:block' : 'display:none' %>; margin-top: 16px;">
        <p>Enter the 6-digit OTP sent to your email:</p>

        <div class="otp-inputs">
          <input type="text" name="otp1" maxlength="1" inputmode="numeric" pattern="[0-9]*">
          <input type="text" name="otp2" maxlength="1" inputmode="numeric" pattern="[0-9]*">
          <input type="text" name="otp3" maxlength="1" inputmode="numeric" pattern="[0-9]*">
          <input type="text" name="otp4" maxlength="1" inputmode="numeric" pattern="[0-9]*">
          <input type="text" name="otp5" maxlength="1" inputmode="numeric" pattern="[0-9]*">
          <input type="text" name="otp6" maxlength="1" inputmode="numeric" pattern="[0-9]*">
        </div>

      <p class="resend">
        Resend OTP in <span id="countdown">180</span> seconds.
      </p>
      </div>

      <div class="button-group">
        <a class="btn btn-cancel" href="/login">Cancel</a>
        <button id="submitBtn" type="submit" class="btn btn-submit">
          <%= showOTP ? 'Verify' : 'Confirm' %>
        </button>
      </div>
    </form>

          <form id="resendForm" action="/forgot-password" method="POST" style="display:none;">
        <input type="hidden" name="email" value="<%= email %>">
      </form>

    <% if (Array.isArray(messages) && messages.length > 0) { %>
      <ul class="flashes">
        <% messages.forEach(function(message) { %>
          <li><%= message %></li>
        <% }) %>
      </ul>
    <% } %>
  </div>

<script>
  (function () {
    document.addEventListener('DOMContentLoaded', init);

    function init() {
      const otpSection = document.getElementById('otp-section');
      const countdownElement = document.getElementById('countdown');
      const resendP = document.querySelector('.resend');
      const otpInputs = document.querySelectorAll('.otp-inputs input');
      const form = document.getElementById('forgotForm');

      // Ensure form works normally for Confirm button
      form.addEventListener('submit', (e) => {
        // Allow normal POST submission
        // Don't block unless fields invalid (optional)
      });

      // OTP section active â†’ start timer
      if (otpSection && otpSection.style.display === 'block' && countdownElement && resendP) {
        startCountdown(countdownElement, resendP);
        autofocusFirstOTP(otpInputs);
      }

      wireOTPInputs(otpInputs);
    }

    function startCountdown(counterEl, resendContainer) {
      let timeLeft = 180;
      counterEl.textContent = String(timeLeft);

      const timer = setInterval(() => {
        timeLeft--;
        counterEl.textContent = String(Math.max(timeLeft, 0));

        if (timeLeft <= 0) {
          clearInterval(timer);
          resendContainer.innerHTML = '<a href="#" id="resendLink">Resend OTP</a>';

          // Attach resend handler safely
          const resendLink = document.getElementById('resendLink');
          resendLink.addEventListener('click', (e) => {
            e.preventDefault();

            // submit hidden resend form
            const resendForm = document.getElementById('resendForm');
            if (resendForm) resendForm.submit();
          });
        }
      }, 1000);
    }

    function wireOTPInputs(otpInputs) {
      otpInputs.forEach((input, idx) => {
        input.addEventListener('input', (e) => {
          e.target.value = e.target.value.replace(/\D/g, '').slice(0, 1);
          if (e.target.value && idx < otpInputs.length - 1) otpInputs[idx + 1].focus();
        });

        input.addEventListener('keydown', (e) => {
          if (e.key === 'Backspace' && !e.target.value && idx > 0) otpInputs[idx - 1].focus();
        });
      });
    }

    function autofocusFirstOTP(otpInputs) {
      if (otpInputs.length) otpInputs[0].focus();
    }
  })();
</script>


</body>
</html>
