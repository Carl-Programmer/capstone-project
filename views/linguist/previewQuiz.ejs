<!DOCTYPE html>
<html>
<head>
  <title><%= pageTitle %></title>

  <style>
    :root {
      --bg: #f5f1ec;
      --card: #ffffff;
      --line: #e2d7c8;
      --brown-dark: #3d2b1f;
      --brown: #4b331a;
      --brown-light: #b14d2c;
      --accent: #f1c48f;
      --green: #2e9e4f;
    }

    body {
      font-family: Arial, sans-serif;
      background: var(--bg);
      padding: 30px;
      color: var(--brown-dark);
    }

    .container {
      max-width: 1000px;
      margin: 0 auto;
    }

    /* ===== TOP BAR ===== */
    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 24px;
    }

    .back-btn {
      text-decoration: none;
      background: #eee;
      color: var(--brown-dark);
      padding: 8px 18px;
      border-radius: 999px;
      font-weight: 700;
      border: 1px solid var(--line);
      box-shadow: 0 3px 0 #d0c7bb;
    }

    .back-btn:active {
      transform: translateY(2px);
      box-shadow: 0 1px 0 #d0c7bb;
    }

    .badge {
      background: var(--accent);
      padding: 6px 14px;
      border-radius: 999px;
      font-size: 12px;
      font-weight: 800;
    }

    /* ===== CARD ===== */
    .card {
      background: var(--card);
      border: 1px solid var(--line);
      border-radius: 18px;
      padding: 24px;
      margin-bottom: 22px;
      box-shadow: 0 6px 16px rgba(0,0,0,0.06);
    }

    h1 {
      margin-top: 0;
      margin-bottom: 6px;
    }

    .meta {
      font-size: 13px;
      font-weight: 700;
      color: var(--brown-light);
      margin-bottom: 20px;
    }

    /* ===== QUESTION ===== */
    .question-title {
      font-weight: 800;
      margin-bottom: 10px;
    }

    ul {
      list-style: none;
      padding-left: 0;
      margin: 0;
    }

    li {
      padding: 8px 12px;
      border-radius: 10px;
      margin-bottom: 6px;
      background: #f8f5f0;
    }

    .correct {
      color: var(--green);
      font-weight: 800;
      margin-left: 6px;
    }

    .empty {
      text-align: center;
      padding: 30px;
      font-weight: 700;
      color: var(--brown-light);
    }
  </style>
</head>

<body>

<div class="container">

  <!-- TOP BAR -->
  <div class="top-bar">
    <a href="/linguist/review" class="back-btn">← Back to Review Dashboard</a>
    <span class="badge">LINGUIST REVIEW MODE</span>
  </div>

  <!-- QUIZ INFO -->
  <div class="card">
    <h1><%= quiz.title %></h1>
    <div class="meta">
      Quiz ID: <%= quiz._id %>
    </div>
  </div>

  <!-- QUESTIONS -->
  <% if (!quiz.questions || quiz.questions.length === 0) { %>
    <div class="card empty">
      No questions found for this quiz.
    </div>
  <% } %>

  <% quiz.questions.forEach((q, i) => { %>
    <div class="card">
      <div class="question-title">
        Q<%= i + 1 %>. <%= q.questionText %>
      </div>

      <ul>
        <% q.options.forEach(opt => { %>
          <li>
            <%= opt %>
            <% if (opt === q.correctAnswer) { %>
              <span class="correct">✔ Correct</span>
            <% } %>
          </li>
        <% }) %>
      </ul>
    </div>
  <% }) %>

</div>

</body>
</html>
