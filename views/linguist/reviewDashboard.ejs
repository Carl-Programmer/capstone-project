<!DOCTYPE html>

<html>
<head>
  <title><%= pageTitle %></title>

<style>
:root {
  --bg: #f5f1ec;
  --card: #ffffff;
  --line: #e2d7c8;
  --brown-dark: #3d2b1f;
  --brown: #4b331a;
  --brown-light: #b14d2c;
  --accent: #f1c48f;
}

/* ===== BASE ===== */
body {
  font-family: Arial, sans-serif;
  background: var(--bg);
  padding: 30px;
  color: var(--brown-dark);
}

/* MAIN CONTAINER */
.container {
  max-width: 1200px;
  margin: 0 auto;
}

/* ===== TOP BAR ===== */
.top-bar {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 16px;
}

.logout {
  background: #eee;
  color: var(--brown-dark);
  border: 1px solid var(--line);
  padding: 8px 18px;
  border-radius: 999px;
  font-weight: 700;
  cursor: pointer;
  box-shadow: 0 3px 0 #d0c7bb;
}

.logout:active {
  transform: translateY(2px);
  box-shadow: 0 1px 0 #d0c7bb;
}

/* ===== HEADER ===== */
h1 {
  margin-bottom: 24px;
  text-align: center;
}

/* ===== STATS ===== */
.stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24px;
  margin-bottom: 32px;
}

.stat-card {
  background: var(--card);
  border: 1px solid var(--line);
  border-radius: 18px;
  padding: 24px;
  text-align: center;
  box-shadow: 0 6px 16px rgba(0,0,0,0.06);
}

.stat-card h2 {
  font-size: 56px;
  margin: 0;
}

.stat-card p {
  margin-top: 6px;
  font-weight: 700;
  color: var(--brown-light);
}

/* ===== TABS ===== */
.tabs {
  display: flex;
  gap: 14px;
  justify-content: center;
  margin-bottom: 28px;
}

.tab {
  padding: 10px 22px;
  border-radius: 999px;
  cursor: pointer;
  font-weight: 700;
  background: #eee;
  border: 1px solid var(--line);
  box-shadow: 0 4px 0 #d0c7bb;
}

.tab.active {
  background: var(--brown);
  color: #fff;
  box-shadow: 0 4px 0 #382410;
}

/* ===== SECTIONS ===== */
.section {
  display: none;
}

.section.active {
  display: block;
}

/* ===== CARD ===== */
.card {
  background: var(--card);
  border: 1px solid var(--line);
  border-radius: 18px;
  padding: 22px;
  margin-bottom: 24px;
  box-shadow: 0 6px 16px rgba(0,0,0,0.06);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14px;
}

.card-header a {
  font-size: 20px;
  font-weight: 700;
  color: var(--brown-dark);
  text-decoration: none;
}

.card-header a:hover {
  text-decoration: underline;
}

/* ===== BADGE ===== */
.badge {
  background: var(--accent);
  padding: 4px 12px;
  border-radius: 999px;
  font-size: 12px;
  font-weight: 800;
}

/* ===== TEXTAREA ===== */
textarea {
  width: 100%;
  resize: none;
  margin-top: 10px;
  padding: 10px;
  border-radius: 10px;
  border: 1px solid var(--line);
}

/* ===== ACTIONS ===== */
.actions {
  display: flex;
  gap: 12px;
  margin-top: 12px;
}

/* APPROVE = GREEN */
.approve {
  background: #2e9e4f;
  color: #fff;
  border: none;
  padding: 10px 22px;
  border-radius: 999px;
  font-weight: 700;
  cursor: pointer;
  box-shadow: 0 4px 0 #1f7a3a;
}

.approve:active {
  transform: translateY(2px);
  box-shadow: 0 2px 0 #1f7a3a;
}

/* REJECT = RED */
.reject {
  background: #e04b4b;
  color: #fff;
  border: none;
  padding: 10px 22px;
  border-radius: 999px;
  font-weight: 700;
  cursor: pointer;
  box-shadow: 0 4px 0 #b53636;
}

.reject:active {
  transform: translateY(2px);
  box-shadow: 0 2px 0 #b53636;
}

/* EMPTY */
.empty {
  text-align: center;
  padding: 40px;
  font-weight: 700;
  color: var(--brown-light);
}

.title-link {
  display: inline-flex;
  align-items: center;
  gap: 8px;
}

.view-hint {
  font-size: 12px;
  font-weight: 800;
  background: #eef2ff;
  color: #3b5bcc;
  padding: 3px 8px;
  border-radius: 999px;
}

.card-header a:hover .view-hint {
  background: #3b5bcc;
  color: #fff;
}

</style>
</head>

<body>

<div class="container">

<!-- TOP BAR -->
<!-- TOP BAR -->
<div class="top-bar">
  <a href="#" class="logout" id="linguistLogoutBtn">Logout</a>
</div>


  <h1>Linguist Review Dashboard</h1>

  <!-- STATS -->
  <div class="stats">
    <div class="stat-card">
      <h2><%= counts.courses %></h2>
      <p>Pending Courses</p>
    </div>
    <div class="stat-card">
      <h2><%= counts.lessons %></h2>
      <p>Pending Lessons</p>
    </div>
    <div class="stat-card">
      <h2><%= counts.quizzes %></h2>
      <p>Pending Quizzes & Exams</p>
    </div>
  </div>

  <!-- TABS -->
  <div class="tabs">
    <div class="tab active" onclick="showTab(event,'courses')">Courses</div>
    <div class="tab" onclick="showTab(event,'lessons')">Lessons</div>
    <div class="tab" onclick="showTab(event,'quizzes')">Quizzes & Exams</div>
  </div>

  <!-- COURSES -->
  <div id="courses" class="section active">
    <% if (courses.length === 0) { %>
      <div class="empty">No pending courses ðŸŽ‰</div>
    <% } %>

    <% courses.forEach(course => { %>
      <div class="card">
        <div class="card-header">
          <a href="/linguist/preview/course/<%= course._id %>" class="title-link">
            <%= course.title %>
            <span class="view-hint">View</span>
          </a>

          <span class="badge">PENDING</span>
        </div>

        <div class="actions">
          <form method="POST" action="/linguist/review/course/<%= course._id %>/approve">
            <button class="approve">Approve</button>
          </form>
        </div>

        <form method="POST" action="/linguist/review/course/<%= course._id %>/reject">
          <textarea name="notes" placeholder="Rejection reason" required></textarea>
          <div class="actions">
            <button class="reject">Reject</button>
          </div>
        </form>
      </div>
    <% }) %>
  </div>

  <!-- LESSONS -->
  <div id="lessons" class="section">
    <% if (lessons.length === 0) { %>
      <div class="empty">No pending lessons ðŸŽ‰</div>
    <% } %>

    <% lessons.forEach(lesson => { %>
      <div class="card">
        <div class="card-header">
          <a href="/linguist/preview/lesson/<%= lesson._id %>" class="title-link">
            <%= lesson.title %>
            <span class="view-hint">View</span>
          </a>
          <span class="badge">PENDING</span>
        </div>

        <div class="actions">
          <form method="POST" action="/linguist/review/lesson/<%= lesson._id %>/approve">
            <button class="approve">Approve</button>
          </form>
        </div>

        <form method="POST" action="/linguist/review/lesson/<%= lesson._id %>/reject">
          <textarea name="notes" placeholder="Rejection reason" required></textarea>
          <div class="actions">
            <button class="reject">Reject</button>
          </div>
        </form>
      </div>
    <% }) %>
  </div>

  <!-- QUIZZES -->
  <div id="quizzes" class="section">
    <% if (quizzes.length === 0) { %>
      <div class="empty">No pending quizzes ðŸŽ‰</div>
    <% } %>

    <% quizzes.forEach(quiz => { %>
      <div class="card">
        <div class="card-header">
          <a href="/linguist/preview/quiz/<%= quiz._id %>"  class="title-link">
            <%= quiz.title %>
            <span class="view-hint">View</span>
          </a>
          <span class="badge">PENDING</span>
        </div>

        <div class="actions">
          <form method="POST" action="/linguist/review/quiz/<%= quiz._id %>/approve">
            <button class="approve">Approve</button>
          </form>
        </div>

        <form method="POST" action="/linguist/review/quiz/<%= quiz._id %>/reject">
          <textarea name="notes" placeholder="Rejection reason" required></textarea>
          <div class="actions">
            <button class="reject">Reject</button>
          </div>
        </form>
      </div>
    <% }) %>
  </div>

</div>

<script>
function showTab(e, id) {
  document.querySelectorAll('.section').forEach(s => s.classList.remove('active'));
  document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
  document.getElementById(id).classList.add('active');
  e.target.classList.add('active');
}


document.addEventListener("DOMContentLoaded", () => {
  const logoutBtn = document.getElementById("linguistLogoutBtn");

  if (!logoutBtn) return;

  logoutBtn.addEventListener("click", (e) => {
    e.preventDefault();

    const ok = confirm("Are you sure you want to log out?");
    if (ok) {
      window.location.href = "/logout"; // GET â€” matches your route
    }
  });
});
</script>

</body>
</html>
