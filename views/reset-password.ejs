<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Reset Password â€¢ Chavalingo</title>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>

  <style>
    /* ============ BASE ============ */
    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      min-height: 100vh;
      background-color: #fff8f0;
      padding: 2rem 1rem;
      font-family: 'Quicksand', sans-serif;
      color: #4a2e05;
    }

    header {
      text-align: center;
      margin-bottom: 2rem;
    }

    header img.logo {
      width: 180px;
      height: auto;
      transition: transform 0.2s ease;
    }

    header img.logo:hover {
      transform: scale(1.03);
    }

    /* ============ FORM BOX ============ */
    .form-container {
      background: #ffffff;
      border-radius: 24px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      padding: 2.5rem 2rem;
      width: 100%;
      max-width: 420px;
      text-align: center;
      border-top: 8px solid #B36200;
      animation: fadeIn 0.5s ease;
    }

    h2 {
      font-weight: 700;
      color: #B36200;
      margin-bottom: 0.75rem;
      font-size: 1.8rem;
    }

    p {
      color: #5c3b10;
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }

    /* ============ INPUT ============ */
    .password-wrapper {
      position: relative;
      width: 100%;
      margin-top: 0.75rem;
    }

    input[type="password"],
    input[type="text"] {
      width: 80%;
      font-size: 1rem;
      padding: 0.8rem 2.7rem 0.8rem 1rem;
      border-radius: 9999px;
      border: 2px solid #f1d3b3;
      background-color: #fffaf5;
      outline: none;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    input:focus {
      border-color: #FFCB91;
      box-shadow: 0 0 0 3px rgba(255, 203, 145, 0.4);
    }

    /* Eye Icon */
    #togglePassword {
      position: absolute;
      top: 50%;
      right: 35px;
      transform: translateY(-50%);
      cursor: pointer;
      color: #b18c5c;
      font-size: 1.1rem;
      transition: color 0.3s ease;
    }

    #togglePassword:hover {
      color: #B36200;
    }

    /* ============ STRENGTH FEEDBACK ============ */
    .strength-info {
      margin-top: 0.5rem;
      font-size: 0.85rem;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    /* ============ BUTTONS ============ */
    .button-group {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 2rem;
      gap: 0.8rem;
    }

    .btn {
      flex: 1;
      font-weight: 700;
      border-radius: 9999px;
      padding: 0.9rem 1rem;
      cursor: pointer;
      text-align: center;
      font-size: 1rem;
      transition: all 0.25s ease;
    }

    .btn-submit {
      background: #FFCB91;
      color: #B36200;
      border: none;
      box-shadow: 0 4px 8px rgba(255, 203, 145, 0.4);
    }

    .btn-submit:hover {
      background: #f5b874;
      transform: translateY(-2px);
    }

    .btn-cancel {
      background: #e9e2da;
      color: #4a2e05;
      text-decoration: none;
      border: none;
    }

    .btn-cancel:hover {
      background: #dcd3c8;
      transform: translateY(-2px);
    }

    /* ============ MESSAGES ============ */
    .flashes {
      margin-top: 1.5rem;
      list-style: none;
      padding: 0;
      font-weight: 600;
      color: #B36200;
    }

    .flashes li {
      background: #FFF2DE;
      border-radius: 9999px;
      padding: 0.6rem 1rem;
      margin-bottom: 0.5rem;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    }

    /* ============ ANIMATION ============ */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>

<body>
  <header>
    <a href="/login">
      <img src="/img/Chabalingo-Logo 1.png" alt="Chavalingo Logo" class="logo">
    </a>
  </header>

  <div class="form-container">
    <h2>Reset Your Password</h2>
    <p>Enter your new password below to continue your Chavalingo journey.</p>

    <form action="/reset-password" method="POST" novalidate>
      <input type="hidden" name="email" value="<%= email %>">

      <div class="password-wrapper">
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Enter new password"
          required
          autocomplete="new-password"
        >
        <i class="fas fa-eye" id="togglePassword"></i>
      </div>

      <!-- Password strength feedback -->
      <div id="strengthInfo" class="strength-info"></div>

      <div class="button-group">
        <a href="/login" class="btn btn-cancel">Cancel</a>
        <button type="submit" class="btn btn-submit" id="resetBtn">Reset Password</button>
      </div>
    </form>

    <% if (Array.isArray(messages) && messages.length > 0) { %>
      <ul class="flashes">
        <% messages.forEach(function(message) { %>
          <li><%= message %></li>
        <% }) %>
      </ul>
    <% } %>
  </div>

  <!-- ðŸ‘ï¸ Toggle Password Visibility & Strength Checker -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const togglePassword = document.getElementById("togglePassword");
      const passwordField = document.getElementById("password");
      const strengthInfo = document.getElementById("strengthInfo");
      const resetBtn = document.getElementById("resetBtn");

      // Disable submit by default
      resetBtn.disabled = true;
      resetBtn.style.opacity = "0.6";
      resetBtn.style.cursor = "not-allowed";

      // Toggle password visibility
      togglePassword.addEventListener("click", function () {
        const type = passwordField.getAttribute("type") === "password" ? "text" : "password";
        passwordField.setAttribute("type", type);
        this.classList.toggle("fa-eye-slash");
      });

      // Password strength checker
      const checkStrength = (val) => {
        let score = 0;
        if (val.length >= 8) score++;
        if (/[A-Z]/.test(val)) score++;
        if (/[a-z]/.test(val)) score++;
        if (/[0-9]/.test(val)) score++;
        if (/[^A-Za-z0-9]/.test(val)) score++;
        return score;
      };

      passwordField.addEventListener("input", () => {
        const val = passwordField.value;
        const strength = checkStrength(val);

        if (!val) {
          strengthInfo.textContent = "";
          resetBtn.disabled = true;
          resetBtn.style.opacity = "0.6";
          resetBtn.style.cursor = "not-allowed";
          return;
        }

        if (strength <= 2) {
          strengthInfo.textContent = "Weak password â€” add uppercase letters, numbers, and symbols.";
          strengthInfo.style.color = "#ef4444";
          resetBtn.disabled = true;
          resetBtn.style.opacity = "0.6";
          resetBtn.style.cursor = "not-allowed";
        } else if (strength <= 4) {
          strengthInfo.textContent = "Medium password â€” try adding more variety for extra security.";
          strengthInfo.style.color = "#eab308";
          resetBtn.disabled = true;
          resetBtn.style.opacity = "0.6";
          resetBtn.style.cursor = "not-allowed";
        } else {
          strengthInfo.textContent = "Strong password â€” ready to reset!";
          strengthInfo.style.color = "#22c55e";
          resetBtn.disabled = false;
          resetBtn.style.opacity = "1";
          resetBtn.style.cursor = "pointer";
        }
      });
    });
  </script>
</body>
</html>
