<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= pageTitle || "Quiz Result" %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/topbar.css">
</head>

<body class="bg-[#fffaf5] min-h-screen flex flex-col">

  <!-- üîù Topbar -->
  <header class="topbar shadow">
    <%- include('../partials/_topbar') %>
  </header>

  <!-- üß† Main Quiz Result Content -->
  <main class="flex-grow flex items-center justify-center p-6">
    <div class="max-w-2xl w-full bg-white border border-[#f3e5db] rounded-2xl shadow-lg p-8 text-center">

      <h1 class="text-3xl font-bold text-[#4a2e05] mb-6">
        Lesson Quiz Result
      </h1>

      <%
        let passed = percentage >= 70;
      %>

      <% if (passed) { %>
        <div class="mb-6">
          <div class="w-24 h-24 mx-auto flex items-center justify-center bg-green-100 border-4 border-green-500 rounded-full text-5xl">
            ‚úÖ
          </div>
          <h2 class="text-2xl font-semibold text-green-700 mt-4">
            Great Job!
          </h2>
          <p class="text-green-600 text-lg mt-2">
            You passed this quiz and unlocked the next lesson! üéâ
          </p>
        </div>
      <% } else { %>
        <div class="mb-6">
          <div class="w-24 h-24 mx-auto flex items-center justify-center bg-red-100 border-4 border-red-500 rounded-full text-5xl">
            ‚ùå
          </div>
          <h2 class="text-2xl font-semibold text-red-700 mt-4">
            Keep Trying!
          </h2>
          <p class="text-red-600 text-lg mt-2">
            You need at least 70% to pass this quiz. Review the lesson and try again.
          </p>
        </div>
      <% } %>

      <!-- üìä Score Summary -->
<!-- üìä Score Summary -->
<div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-center mt-8">
  <div class="p-4 rounded-lg bg-[#fff7ed] border border-[#f3e5db]">
    <p class="text-sm text-gray-500">Score</p>
    <p class="text-xl font-semibold text-[#4a2e05]"><%= score %> / <%= total %></p>
  </div>
  
  <div class="p-4 rounded-lg bg-[#fff7ed] border border-[#f3e5db]">
    <p class="text-sm text-gray-500">Percentage</p>
    <p class="text-xl font-semibold text-[#4a2e05]"><%= percentage.toFixed(2) %>%</p>
  </div>
  
  <div class="p-4 rounded-lg bg-[#fff7ed] border border-[#f3e5db]">
    <p class="text-sm text-gray-500">Status</p>
    <p class="text-xl font-semibold <%= passed ? 'text-green-700' : 'text-red-700' %>">
      <%= passed ? 'Passed' : 'Failed' %>
    </p>
  </div>
</div>


      <!-- üîô Back Button -->
      <div class="mt-10">
        <a href="/users/quiz/<%= quiz.lessonId %>"
           class="inline-block bg-[#f97316] hover:bg-[#ea580c] text-white text-lg font-medium px-6 py-3 rounded-lg shadow transition duration-200">
          ‚¨Ö Back to Quiz Attempts
        </a>
      </div>
    </div>
  </main>

</body>
</html>
